{% if description %}
  <meta name="description" content="{{ description }}" />
  <meta name="twitter:description" content="{{ description }}" />
  <meta property="og:description" content="{{ description }}" />
{% endif %}

{% if featuredImg %}
  <meta property="og:image" content="{{ featuredImg }}" />
  <meta name="twitter:image" content="{{ featuredImg }}" />
  <meta property="og:image:alt" content="Page image for {{ site.title }}" />
  <meta name="twitter:image:alt" content="Page image for {{ site.title }}" />
{% endif %}